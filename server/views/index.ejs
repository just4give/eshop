<!DOCTYPE html>
<html ng-app="photoOrder">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Online shopping cart website, a product by AppStackSolutions.com">
    <meta name="author" content="AppStackSolutions.com">
    <title ng-bind-template="{{viewTitle}} - AppStackSolutions.com">AppStackSolutions.com</title>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300,700,300italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Kaushan+Script' rel='stylesheet' type='text/css'>
    <link href="vendor/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="vendor/angular/angular-csp.css" rel="stylesheet">
    <link href="vendor/animate.css/animate.min.css" rel="stylesheet">
    <link href="vendor/angularjs-toaster/toaster.min.css" rel="stylesheet">

    <link href="css/style.css" rel="stylesheet" />
    <link rel="icon" href="images/favicon.ico" type="image/x-icon">
    <base href="/">
  </head>
  <body>


    <header headroom offset='220' class="navbar-fixed-top top-header wow bounceInDown" data-wow-delay="0s">

      <div class="col-xs-12 text-right"  ng-controller="loginController"  >
          <a ui-sref="home" class="pull-left" style="color: rgba(187, 13, 13, 0.58);"><i class="fa fa-shopping-basket fa-3x"></i></a>
          <form class="product-search-box">
            <input type="search" placeholder="Search..." class="product-search-text" ng-model="query">
            <button class="btn-search" ng-submit="search(query)"   ui-sref="search({query: query , category: ''})"><i class="fa fa-search"></i></button>
          </form>
          <button class="btn btn-opp-primary " ng-click="openLoginPopup()" ng-hide="loggedIn"><i class="fa fa-sign-in"></i> Login</button>

          <div class="btn-group user-menu" ng-show="loggedIn">
            <button type="button" class="btn btn-opp-primary" ng-bind="state.user.firstName">  </button>
            <button type="button" class="btn btn-opp-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="caret"></span>
              <span class="sr-only">Toggle Dropdown</span>
            </button>
            <ul class="dropdown-menu">
              <li><a ui-sref="home" class="link">My Account</a></li>
              <li><a ui-sref="myorder" class="link">My Order</a></li>
              <li role="separator" class="divider"></li>
              <li><a href="" class="link" ng-click="logout()">Logout</a></li>
            </ul>
          </div>
          <a class="link cart" ng-click="checkout()"><i class="fa fa-shopping-bag fa-2x"></i>
            <span class="badge" ng-bind="cart? cart.length:0"> </span>
          </a>

      </div>

    </header>

    <toaster-container></toaster-container>
    <div ui-view class=" page-view"  ></div>

  </body>
  <script src="vendor/jquery/dist/jquery.min.js"></script>
  <script src="vendor/bootstrap/dist/js/bootstrap.min.js"></script>

  <script src="vendor/angular/angular.min.js"></script>
  <script src="vendor/angular-ui-router/release/angular-ui-router.min.js"></script>
  <script src="vendor/angular-animate/angular-animate.min.js"></script>
  <script src="vendor/angular-touch/angular-touch.min.js"></script>
  <script src="vendor/angular-strap/dist/angular-strap.min.js"></script>
  <script src="vendor/angular-strap/dist/angular-strap.tpl.min.js"></script>
  <script src="vendor/greensock/src/minified/TweenMax.min.js"></script>
  <script src="vendor/angular-tweenmax/dist/angular-tweenmax.js"></script>
  <script src="vendor/angular-bootstrap/ui-bootstrap.min.js"></script>
  <script src="vendor/angular-bootstrap/ui-bootstrap-tpls.min.js"></script>
  <script src="vendor/angular-confirm-modal/angular-confirm.js"></script>
  <script src="vendor/angular-local-storage/dist/angular-local-storage.min.js"></script>
  <script src="vendor/ng-file-upload/ng-file-upload-all.min.js"></script>
  <script src="vendor/angular-facebook/lib/angular-facebook.js"></script>
  <script src="vendor/angular-inview/angular-inview.js"></script>
  <script src="vendor/angularjs-toaster/toaster.min.js"></script>
  <script src="vendor/headroom.js/dist/headroom.min.js"></script>
  <script src="vendor/headroom.js/dist/angular.headroom.min.js"></script>
  <script src="vendor/wow/dist/wow.min.js"></script>
  <script src="vendor/angularjs-viewhead/angularjs-viewhead.js"></script>

  <script src="modules/app/AppModule.js"></script>
  <script src="modules/common/HTTPInterceptor.js"></script>
  <script src="modules/app/AppConfig.js"></script>
  <script src="modules/common/CarouselController.js"></script>
  <script src="modules/common/LoginController.js"></script>
  <script src="modules/app/HomeController.js"></script>
  <script src="modules/upload/UploadController.js"></script>
  <script src="modules/checkout/CartController.js"></script>
